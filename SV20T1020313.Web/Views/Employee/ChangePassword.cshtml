@model SV20T1020313.DomainModels.Employee;
@{
   
}

<div class="box box-primary">
    <div class="box-body">
        <form action="~/Employee/SavePassword" method="post">
            <div class="form-group">
                <input type="hidden" name="UserName" value="@Model.Email" />
                <input type="hidden" name="id" value="@Model.EmployeeID" />
                <label>Nhập mật khẩu cũ:</label>
                <input type="password" name="oldPassword" class="form-control" />
                @Html.ValidationMessage("OldPassword", new { @style = "color: #f00" }) 
            </div>
            <div class="form-group">
                <label>Nhập mật khẩu mới:</label>
                <input type="password" name="newPassword" class="form-control" />
                @Html.ValidationMessage("NewPassword", new { @style = "color: #f00" })
            </div>

            <div class="form-group">
                @Html.ValidationMessage("Result", new { @style = "color: #f00" })
            </div>

            <div class="form-group text-right">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floppy-o"></i>
                    Lưu dữ liệu
                </button>
                <a href="~/Category" class="btn btn-default"> Quay lại </a>
            </div>
        </form>
    </div>
</div>
