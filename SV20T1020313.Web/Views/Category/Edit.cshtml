@model SV20T1020313.DomainModels.Category
@{

}
<div class="box box-primary">
    <div class="box-body">
        <form action="~/Category/Save" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <input type="hidden" name="CategoryID" value="@Model.CategoryId" />
                <label >Tên loại hàng:</label>
                @Html.TextBoxFor(m => m.CategoryName, new { @class = "form-control", @autofocus = "autofocus" })
                @Html.ValidationMessage(nameof(Model.CategoryName), new { @style = "color: #f00" })
            </div>
            <div class="form-group">
                <label>Mô tả loại hàng:</label>
                @* <textarea class="form-control" name="Description" style="resize: none">@(Model.Description != null ? Model.Description : null)</textarea> *@
                @Html.TextArea(nameof(Model.Description), (Model.Description != null ? Model.Description : null), 3, 20, new { @class = "form-control" })
                @Html.ValidationMessage(nameof(Model.Description), new { @style = "color: #f00" })
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Ảnh minh hoạ:</label>
                <div class="col-sm-10">
                    <input type="hidden" name="Photo" value="@Model.Photo" />
                    <input type="file" class="form-control" name="uploadPhoto" accept="image/*"
                           onchange="document.getElementById('Photo').src = window.URL.createObjectURL(this.files[0])" />
                </div>
            </div>


            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <img id="Photo" src="~/images/categories/@(Model.Photo != "" ? Model.Photo : "EmptyProduct.png")" class="img img-bordered" style="width:200px" />
                </div>
            </div>

            <div class="form-group">
                @Html.ValidationMessage("Error", new { @style = "color: #f00" })
            </div>

            <div class="form-group text-right">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floppy-o"></i>
                    Lưu dữ liệu
                </button>
                <a href="~/Category" class="btn btn-default"> Quay lại </a>
            </div>
        </form>
    </div>
</div>



