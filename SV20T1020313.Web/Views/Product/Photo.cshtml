@model SV20T1020313.DomainModels.ProductPhoto
@{

}

<div class="box box-primary">

    <div class="box-body">
        <form class="form-horizontal" action="~/Product/SavePhoto" method="post" enctype="multipart/form-data">

            <div class="form-group">
                <label class="control-label col-sm-2">Ảnh Mặt hàng:</label>
                <div class="col-sm-10">
                    <input type="hidden" name="ProductID" value="@Model.ProductID"/>
                    <input type="hidden" name="PhotoID" value="@Model.PhotoId"/>

                    <input type="hidden" name="Photo" value="@Model.Photo" />
                    <input type="file" class="form-control" name="uploadPhoto" accept="image/*"
                           onchange="document.getElementById('Photo').src = window.URL.createObjectURL(this.files[0])" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <input type="hidden" name="Photo" value="macbook.png" />
                    <img id="Photo" src="~/images/products/@(string.IsNullOrWhiteSpace(Model.Photo) ? "EmptyProduct.png" : Model.Photo)" class="img img-bordered" style="width:200px" />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Mô tả ảnh: </label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="Description" value="@Model.Description"/>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Thứ tự hiển thị</label>
                <div class="col-sm-10">
                    <input type="number" class="form-control" name="DisplayOrder" value="@Model.DisplayOrder"/>
                </div>
            </div>

          

            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <input class="form-check-input" type="radio" name="IsHidden" value="false" id="flexRadioDefault1" checked="@(!Model.IsHidden && true)">
                    <label for="flexRadioDefault1">
                        Hiển thị ảnh
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <input class="form-check-input" type="radio" name="IsHidden" value="true" id="flexRadioDefault2" checked="@(Model.IsHidden && true)">
                    <label for="flexRadioDefault2">
                        Không hiển thị ảnh
                    </label>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-floppy-o"></i> Lưu thông tin
                    </button>
                    <a class="btn btn-default" href="~/Product/Edit/@Model.ProductID">
                        Quay lại
                    </a>
                </div>
            </div>
        </form>

    </div>

</div>